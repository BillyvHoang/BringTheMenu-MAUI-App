<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BringTheMenu.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BringTheMenu"
    xmlns:TabOption="clr-namespace:BringTheMenu.MVVM.ViewModel.Tabs"
    Shell.FlyoutBehavior="Disabled">

    <!--Tab bar Option-->
    <TabBar x:Name="TheTabs">
        
        <Tab Title="Menu">
            <ShellContent ContentTemplate="{DataTemplate TabOption:Menu_Button_ViewModel}"/>
        </Tab>
        <Tab Title="Browse">
            <ShellContent ContentTemplate="{DataTemplate TabOption:BrowseMenu_ViewModel}"/>
        </Tab>
        <Tab Title="Account">
            <ShellContent ContentTemplate="{DataTemplate TabOption:Account_ViewModel}"/>
        </Tab>
        
    </TabBar>
    <!--Tab bar Option-->
    
    
    
    
    


</Shell>
